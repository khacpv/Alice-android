<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edittext_signup_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:duplicateParentState="true"
        android:ellipsize="start"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:foregroundGravity="left"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/edittext_signup_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:duplicateParentState="true"
        android:ellipsize="start"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:foregroundGravity="left"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/edittext_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:duplicateParentState="true"
        android:ellipsize="start"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:foregroundGravity="left"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/edittext_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:duplicateParentState="true"
        android:ellipsize="start"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:foregroundGravity="left"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="24"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/edittext_signup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:duplicateParentState="true"
        android:ellipsize="start"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:foregroundGravity="left"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="24"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColorHint="#fff" />

    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_signup_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start" />

</LinearLayout>